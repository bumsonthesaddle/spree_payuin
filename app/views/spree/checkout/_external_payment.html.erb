<%= hidden_field_tag 'key', @order.payment_method.preferred_merchant_id %>
<%= hidden_field_tag 'txnid', "foobar#{@order.id}ooga" %>
<%= hidden_field_tag 'amount', @order.total.to_f %>
<%= hidden_field_tag 'productinfo', @order.number %>
<%= hidden_field_tag 'firstname', @order.bill_address.firstname %>
<%= hidden_field_tag 'email', @order.user.email %>
<%= hidden_field_tag 'phone', @order.bill_address.phone %>
<%= hidden_field_tag 'surl', gateway_payuin_callback_path(@order.id) %>
<%= hidden_field_tag 'furl', gateway_payuin_callback_path(@order.id) %>
<%= hidden_field_tag 'hash', Digest::SHA512.hexdigest("#{@order.payment_method.preferred_merchant_id}|foobar#{@order.id}ooga|#{@order.total.to_f}|#{@order.number}|#{@order.bill_address.firstname}|#{@order.user.email}|||||||||||#{@order.payment_method.preferred_salt}")%>
<%= submit_tag 'Proceed to payment' %>

<script type="text/javascript">
  <%# <% url = ENV["RAILS_ENV"] != "development" ?  @order.payment_method.preferred_url : test_gateway_path -%>
  <% url =@order.payment_method.preferred_url -%>
  $("form.edit_order").attr("action", "<%=url-%>")
  $("form.edit_order").attr("method", "post")
</script>
